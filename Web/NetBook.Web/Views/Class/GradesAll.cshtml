@using NetBook.Common
@model List<NetBook.Web.ViewModels.Grade.StudentGradesAllViewModel>
@{
    this.ViewData["Title"] = $"Oценки на {ViewBag.StudentName}";
}

<main id="main">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="title" style="position: relative">
                    <div class="row" id="white">
                        <div class="col s12 m12 l9 xl8" style="margin-top: 28px">
                            <h4 class="white-text">
                                Oценки на @ViewBag.StudentName
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="card-panel white" style="overflow-x: auto;">
                    <table class="highlight">
                        <thead>
                        <tr>
                            <th>Предмет</th>
                            <th>Хорариум</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var subject in @Model)
                        {
                            <tr style="cursor: default;">
                                <td>@subject.SubjectName</td>
                                <td>@subject.Workload</td>
                                
                                <td>
                                    <a asp-controller="Class" asp-action="GradesPerSubject" asp-route-id="@subject.Id" asp-route-studentId="@ViewBag.StudentId" class="indigo-text text-lighten-3 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Оценки">
                                        <i class="material-icons ">star_half</i>
                                    </a>
                                </td>
                                    
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <a class="waves-effect btn-flat left" asp-controller="Class" asp-action="StudentsAll" asp-route-id="@ViewBag.ClassId" style="margin-top: -20px; color: #909090"><i class="material-icons left">keyboard_arrow_left</i>Назад</a>
    </div>
</main>
