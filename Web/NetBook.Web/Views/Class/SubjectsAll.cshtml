@using NetBook.Data.Models.Enums
@model List<NetBook.Web.ViewModels.Class.SubjectInClassAllViewModel>

@{
    this.ViewData["Title"] = $"Учебни предмети в {ViewBag.ClassName} клас";
}

    <main id="main">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <div class="title" style="position: relative">
                        <div class="row" id="white">
                            <div class="col s12" style="margin-top: 28px">
                                <h4 class="white-text">
                                    Учебни предмети в @ViewBag.ClassName клас
                                    <a asp-controller="Class" asp-action="CreateSubject" asp-route-id="@ViewBag.ClassId" class="waves-effect waves-light btn gradient-animation"><i class="material-icons left">add</i>Нов<span class="hide-on-large-only hide-on-small-only"> предмет</span></a>
                                </h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-panel white" style="overflow-x: auto;">
                        <table class="highlight">
                            <thead>
                                <tr>
                                    <th>Предмет</th>
                                    <th>Хорариум</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var subject in Model)
                                {
                                    <tr style="cursor: default;">
                                        <td>@subject.SubjectName</td>
                                        <td>@subject.Workload</td>

                                        <td>
                                            <a asp-controller="Class" asp-action="EditSubject" asp-route-id="@subject.Id" class="indigo-text text-lighten-3 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Редактиране"><i class="material-icons">edit</i></a>
                                            <a asp-controller="Class" asp-action="DeleteSubject" asp-route-id="@subject.Id" class="modal-trigger tooltipped" data-position="bottom" data-delay="50" data-tooltip="Изтриване" >
                                                <i class="material-icons red-text">delete</i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <a class="waves-effect btn-flat left" asp-controller="Class" asp-action="All" style="margin-top: -20px; color: #909090"><i class="material-icons left">keyboard_arrow_left</i>Назад</a>
        </div>
    </main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

