@using NetBook.Common
@model NetBook.Web.Paging.PaginatedList<NetBook.Web.ViewModels.Student.StudentAllViewModel>
@{
    this.ViewData["Title"] = "Ученици";
}

<main id="main">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="title" style="position: relative">
                    <div class="row" id="white">
                        <div class="col s12 m12 l9 xl8" style="margin-top: 28px">
                            <h4 class="white-text">
                                Ученици
                                <a asp-area="Administration" asp-controller="Students" asp-action="Create" class="waves-effect waves-light btn gradient-animation"><i class="material-icons left">add</i>Нов<span class="hide-on-large-only hide-on-small-only"> ученик</span></a>
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="card-panel white" style="overflow-x: auto;">
                    <table class="highlight">
                        <thead>
                        <tr>
                            <th>Ученик</th>
                            <th>ЕГН</th>
                            <th>Клас</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var student in @Model)
                        {
                            <tr style="cursor: default;">
                                <td>@student.FullName</td>
                                <td>@student.PIN</td>
                                <td>@student.ClassName</td>
                                    
                                <td>
                                    <a asp-area="Administration" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" class="indigo-text text-lighten-3 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Редактиране">
                                        <i class="material-icons">edit</i>
                                    </a>
                                    <a asp-area="Administration" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id" class="indigo-text text-lighten-3 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Изтриване">
                                        <i class="material-icons red-text ">delete</i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <div class="center-align">
                        <a asp-area="Administration" asp-controller="Students" asp-action="All"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           class="btn waves-effect waves-light gradient-animation  @prevDisabled">
                            Предишна
                        </a>
                        <a asp-area="Administration" asp-controller="Students" asp-action="All"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           class="btn waves-effect waves-light gradient-animation @nextDisabled">
                            Следваща
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
