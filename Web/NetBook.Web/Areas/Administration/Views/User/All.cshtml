@using NetBook.Common
@model List<NetBook.Web.ViewModels.User.UserAllViewModel>
@{
    this.ViewData["Title"] = "Учители";
}

<main id="main">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="title" style="position: relative">
                    <div class="row" id="white">
                        <div class="col s12 m12 l9 xl8" style="margin-top: 28px">
                            <h4 class="white-text">
                                Потребители
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-panel white" style="overflow-x: auto;">
                <table class="highlight">
                    <thead>
                        <tr>
                            <th>Потребител</th>
                            <th>Email</th>
                            <th>Телефон</th>

                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in @Model)
                        {
                            <tr style="cursor: default;">
                                <td>@user.FullName</td>
                                <td><a href="mailto:@user.Email">@user.Email</a></td>
                                <td>@user.PhoneNumber</td>

                                <td>
                                    @if (user.IsClassTeacher)
                                    {
                                        <a class="indigo-text text-lighten-3 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Учителят е класен ръководител.">
                                            <i class="material-icons grey-text ">delete</i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-area="Administration" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="indigo-text text-lighten-3 tooltipped" data-position="bottom" data-delay="50" data-tooltip="Изтриване">
                                            <i class="material-icons red-text ">delete</i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>